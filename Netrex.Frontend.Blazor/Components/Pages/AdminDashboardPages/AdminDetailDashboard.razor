    <section id="ad-analytics" class="ad-section">
        <h2 style="font-weight:900;color:#000000;">Analytics</h2>
        <div style="display: flex; gap: 2rem; flex-wrap: wrap;">
            <div style="flex: 1; min-width: 300px;">
                <h3 style="font-weight: 900; color: #000000; margin-bottom: 1rem;">Revenue Overview</h3>
                <svg viewBox="0 0 400 200" style="width: 100%; height: auto; border: 1px solid #e5e7eb; border-radius: 8px; background: #ffffff;">
                    <defs>
                        <linearGradient id="revenueGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                            <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:0.8" />
                            <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:0.1" />
                        </linearGradient>
                    </defs>
                    <g transform="translate(50,20)">
                        <line x1="0" y1="150" x2="300" y2="150" stroke="#000000" stroke-width="1" />
                        <line x1="0" y1="0" x2="0" y2="150" stroke="#000000" stroke-width="1" />
                        <text x="-10" y="155" font-size="12" fill="#000000">0</text>
                        <text x="-20" y="75" font-size="12" fill="#000000">50k</text>
                        <text x="-25" y="5" font-size="12" fill="#000000">100k</text>
                        <text x="0" y="170" font-size="12" fill="#000000">Jan</text>
                        <text x="75" y="170" font-size="12" fill="#000000">Feb</text>
                        <text x="150" y="170" font-size="12" fill="#000000">Mar</text>
                        <text x="225" y="170" font-size="12" fill="#000000">Apr</text>
                        <text x="300" y="170" font-size="12" fill="#000000">May</text>
                        <path d="M0,120 L75,100 L150,80 L225,110 L300,60" stroke="url(#revenueGradient)" stroke-width="3" fill="none" />
                        <circle cx="0" cy="120" r="4" fill="#3b82f6" />
                        <circle cx="75" cy="100" r="4" fill="#3b82f6" />
                        <circle cx="150" cy="80" r="4" fill="#3b82f6" />
                        <circle cx="225" cy="110" r="4" fill="#3b82f6" />
                        <circle cx="300" cy="60" r="4" fill="#3b82f6" />
                    </g>
                </svg>
            </div>
            <div style="flex: 1; min-width: 300px;">
                <h3 style="font-weight: 900; color: #000000; margin-bottom: 1rem;">Sales by Category</h3>
                <svg viewBox="0 0 400 200" style="width: 100%; height: auto; border: 1px solid #e5e7eb; border-radius: 8px; background: #ffffff;">
                    <g transform="translate(50,20)">
                        <line x1="0" y1="150" x2="300" y2="150" stroke="#000000" stroke-width="1" />
                        <line x1="0" y1="0" x2="0" y2="150" stroke="#000000" stroke-width="1" />
                        <text x="-10" y="155" font-size="12" fill="#000000">0</text>
                        <text x="-20" y="75" font-size="12" fill="#000000">50</text>
                        <text x="-25" y="5" font-size="12" fill="#000000">100</text>
                        <rect x="20" y="50" width="40" height="100" fill="#ef4444" />
                        <rect x="80" y="30" width="40" height="120" fill="#f59e0b" />
                        <rect x="140" y="70" width="40" height="80" fill="#10b981" />
                        <rect x="200" y="40" width="40" height="110" fill="#3b82f6" />
                        <rect x="260" y="60" width="40" height="90" fill="#8b5cf6" />
                        <text x="35" y="170" font-size="12" fill="#000000">Cat1</text>
                        <text x="95" y="170" font-size="12" fill="#000000">Cat2</text>
                        <text x="155" y="170" font-size="12" fill="#000000">Cat3</text>
                        <text x="215" y="170" font-size="12" fill="#000000">Cat4</text>
                        <text x="275" y="170" font-size="12" fill="#000000">Cat5</text>
                    </g>
                </svg>
            </div>
        </div>
    </section>

    <section id="ad-settings" class="ad-section">
        <h2>Settings</h2>
        <div style="display: flex; gap: 2rem; flex-wrap: wrap;">
            <div style="flex: 1; min-width: 300px;">
                <h3 style="color: #000000; margin-bottom: 1rem;">Account Settings</h3>
                <form style="background: #ffffff; padding: 1.5rem; border-radius: 8px; border: 1px solid #e5e7eb;">
                    <div style="margin-bottom: 1rem;">
                        <label for="username" style="color: #000000; display: block; margin-bottom: 0.5rem;">Username</label>
                        <input type="text" id="username" name="username" style="width: 100%; padding: 0.5rem; border: 1px solid #000000; border-radius: 4px; background: #ffffff; color: #000000;" placeholder="Enter username">
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <label for="email" style="color: #000000; display: block; margin-bottom: 0.5rem;">Email</label>
                        <input type="email" id="email" name="email" style="width: 100%; padding: 0.5rem; border: 1px solid #000000; border-radius: 4px; background: #ffffff; color: #000000;" placeholder="Enter email">
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <label for="password" style="color: #000000; display: block; margin-bottom: 0.5rem;">Password</label>
                        <input type="password" id="password" name="password" style="width: 100%; padding: 0.5rem; border: 1px solid #000000; border-radius: 4px; background: #ffffff; color: #000000;" placeholder="Enter password">
                    </div>
                    <button type="submit" class="ad-btn">Save Changes</button>
                </form>
            </div>
            <div style="flex: 1; min-width: 300px;">
                <h3 style="color: #000000; margin-bottom: 1rem;">Profile</h3>
                <form style="background: #ffffff; padding: 1.5rem; border-radius: 8px; border: 1px solid #e5e7eb;">
                    <div style="margin-bottom: 1rem;">
                        <label for="fullname" style="color: #000000; display: block; margin-bottom: 0.5rem;">Full Name</label>
                        <input type="text" id="fullname" name="fullname" style="width: 100%; padding: 0.5rem; border: 1px solid #000000; border-radius: 4px; background: #ffffff; color: #000000;" placeholder="Enter full name">
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <label for="bio" style="color: #000000; display: block; margin-bottom: 0.5rem;">Bio</label>
                        <textarea id="bio" name="bio" style="width: 100%; padding: 0.5rem; border: 1px solid #000000; border-radius: 4px; background: #ffffff; color: #000000;" placeholder="Enter bio"></textarea>
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <label style="color: #000000; display: block; margin-bottom: 0.5rem;">Notifications</label>
                        <label style="display: flex; align-items: center; margin-bottom: 0.5rem;">
                            <input type="checkbox" style="margin-right: 0.5rem;">
                            <span style="color: #000000;">Email Notifications</span>
                        </label>
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" style="margin-right: 0.5rem;">
                            <span style="color: #000000;">Push Notifications</span>
                        </label>
                    </div>
                    <div style="margin-bottom: 1rem;">
                        <label style="color: #000000; display: block; margin-bottom: 0.5rem;">Dark Mode</label>
                        <label class="ad-toggle-switch">
                            <input type="checkbox">
                            <span class="ad-slider"></span>
                        </label>
                    </div>
                    <button type="submit" class="ad-btn">Update Profile</button>
                </form>
            </div>
        </div>
    </section>
</main>
