@code {
    private string email = string.Empty;
    private string message = string.Empty;

    private void Subscribe()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            message = "Please enter an email address.";
            return;
        }

        message = "Thanks for subscribing!";
        email = string.Empty;
    }
}
