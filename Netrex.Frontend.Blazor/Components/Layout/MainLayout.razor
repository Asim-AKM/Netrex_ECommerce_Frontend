@inherits LayoutComponentBase
@inject NavigationManager NavManager
@using Netrex.Frontend.Blazor.Components.Layout

<div class="layout-root">
    @* LOADER: Isse yahan rakhein taaki ye screen ke top par rahe *@
    <Loader @rendermode="InteractiveServer" />

    <!-- CONDITIONAL HEADER -->
    @if (!IsAuthPage)
    {
        <NavMenu />
    }

    <!-- MAIN NAVBAR (always visible) -->
    <MainNavbar />

    <!-- PAGE CONTENT -->
    <main class="main-content">
        @Body
    </main>

    <!-- FOOTER -->
    <Footer />

</div>

<Toast @rendermode="InteractiveServer" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    // List of all auth-related routes
    private readonly string[] AuthPages = new[]
    {
        "login",
        "register",
        "reset-password",
        "verify-email"
    };

    // Returns true if current page is an auth page
    private bool IsAuthPage
    {
        get
        {
            var relativePath = NavManager.ToBaseRelativePath(NavManager.Uri).ToLower();
            // Empty check handles home page which is ""
            return AuthPages.Any(page => relativePath.StartsWith(page));
        }
    }
}
