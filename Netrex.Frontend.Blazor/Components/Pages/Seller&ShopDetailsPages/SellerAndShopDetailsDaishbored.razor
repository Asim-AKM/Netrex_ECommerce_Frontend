                </div>
            </div>

            <!-- Customers Tab -->
            <div id="customers" class="tab-pane">
                <div class="page-header">
                    <h1>Customer Management</h1>
                </div>

                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Customer Name</th>
