    <section id="ad-product-management" class="ad-section">
        <h2>Product Management</h2>
        <button class="ad-btn">Add New Product</button>

        <div class="ad-table-wrapper">
            <table class="ad-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
