    <!-- Modals -->
    <!-- Profile Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Seller Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" style="text-align: center;">
                <img id="profileImg" src="/assets/sellerassets/Pictures/WhatsApp Image 2025-12-27 at 09.30.06.jpeg" alt="Profile" style="border-radius: 50%; margin-bottom: 16px; max-width: 150px; width: 150px; height: 150px; object-fit: cover;">
                    <h4 id="sellerName">Saqib Khan</h4>
                    <p id="sellerEmail" style="color: #64748b;">saqibkhan1@gmail.com</p>
                    <p id="sellerPhone" style="color: #64748b;">03335011154</p>
                    <button class="btn-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal" data-bs-dismiss="modal">
                        <i class="fas fa-edit"></i> Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" style="text-align: center;">
                    <div style="margin-bottom: 20px;">
                        <img id="previewProfileImg" src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=300&h=300&fit=crop" alt="Profile" style="border-radius: 50%; margin-bottom: 16px; max-width: 150px; width: 150px; height: 150px; object-fit: cover; border: 3px solid var(--primary);">
                    </div>
                    <div class="form-group">
                        <label>Profile Picture <span class="image-required">*</span></label>
                        <input type="file" class="form-control" onchange="previewProfileImage(event)">
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="editSellerName">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" id="editSellerEmail">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="tel" class="form-control" id="editSellerPhone">
                    </div>
                    <div class="form-group">
                        <label>Bio</label>
                        <textarea class="form-control" id="editSellerBio" rows="3"></textarea>
                    </div>
                    <button class="btn-primary" onclick="saveProfileChanges()">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Product Name <span class="image-required">*</span></label>
                        <input type="text" class="form-control" id="productName">
                    </div>
                    <div class="form-group">
                        <label>SKU <span class="image-required">*</span></label>
                        <input type="text" class="form-control" id="productSKU">
                    </div>
                    <div class="form-group">
                        <label>Price <span class="image-required">*</span></label>
                        <input type="number" class="form-control" id="productPrice" step="0.01">
                    </div>
                    <div class="form-group">
                        <label>Stock <span class="image-required">*</span></label>
                        <input type="number" class="form-control" id="productStock">
                    </div>
                    <div class="form-group">
                        <label>Product Image <span class="image-required">*</span></label>
                        <input type="file" class="form-control" id="productImage" onchange="previewProductImage(event)">
                        <div class="image-preview">
                            <img id="imagePreview" style="display: none;">
                        </div>
                    </div>
                    <button class="btn-primary" onclick="addProduct()">
                        <i class="fas fa-plus"></i> Add Product
                    </button>
                </div>
            </div>
        </div>
    </div>

 