    <section id="ad-cart-order" class="ad-section">
        <h2>Cart and Order Module</h2>
        <button class="ad-btn">View All Carts</button>

        <div class="ad-table-wrapper">
            <table class="ad-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#12345</td>
                        <td>John Doe</td>
                        <td>$79.98</td>
                        <td>Pending</td>
                        <td>2023-10-01</td>
                        <td>
                            <button class="ad-btn">View</button>
                            <button class="ad-btn">Update</button>
                        </td>
                    </tr>
                    <tr>
                        <td>#12346</td>
                        <td>Jane Smith</td>
                        <td>$129.97</td>
                        <td>Shipped</td>
