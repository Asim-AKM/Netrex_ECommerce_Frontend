                                <td><span class="badge badge-success">Active</span></td>
                                <td><button class="btn-sm btn-view">View</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Reviews Tab -->
            <div id="reviews" class="tab-pane">
                <div class="page-header">
                    <h1>Customer Reviews & Ratings</h1>
                </div>

                <div class="table-container">
