            <!-- Reports Tab -->
            <div id="reports" class="tab-pane">
                <div class="page-header">
                    <h1>Sales & Performance Reports</h1>
                    <button class="btn-primary" onclick="downloadReport()">
                        <i class="fas fa-download"></i> Download Report
                    </button>
                </div>

                <div class="charts-grid">
                    <!-- Sales Report Chart -->
                    <div class="chart-container">
                        <div class="chart-title"><i class="fas fa-chart-line"></i> Monthly Sales Report</div>
                        <div class="chart-wrapper">
                            <canvas id="salesChart"></canvas>
                        </div>
                    </div>

                    <!-- Revenue Chart -->
                    <div class="chart-container">
                        <div class="chart-title"><i class="fas fa-dollar-sign"></i> Revenue Trend</div>
